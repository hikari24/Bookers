<p><%= flash[:notice] %></p>

<h1>Books</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
	</tr>

	<%if @books.present? %>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to 'Show', book %></td>
		<td><%= link_to 'Edit', edit_book_path(book) %></td>
		<td><%= link_to 'destroy', book, method: :delete, "data-confirm" => "Are you sure?" %>

	</tr>
	<% end %>
	<% end %>

</table>




