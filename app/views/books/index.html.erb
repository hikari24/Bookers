<h1>Books</h1>

<table>
	<tr>
		<th>title</th>
		<th>body</th>
	</tr>
	
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to 'Show', book %></td>
		<td><%= link_to 'Edit', edit_book_path(@book) %></td>
		<td><%= link_to 'destroy', destroy_book_path(@list.id), method: :delete, "date-confirm" => "本当に削除しますか？" %></td>
	</tr>
	<% end %>
</table>




<h3>new book</h3>

	<%= form_for(@book, url: '/books') do |f| %>

		<h4>title</h4>
		<%= f.text_field :title %>

		<h4>body</h4>
		<%= f.text_area :body %><br>

		<%= f.submit 'Create book'%>


	<% end %>