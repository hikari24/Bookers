<h1>Books</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
	</tr>
	
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to 'Show', book %></td>
		<td><%= link_to 'Edit', edit_book_path(book) %></td>
		<td><%= link_to 'destroy', book, method: :delete, "data-confirm" => "Are you sure?" %>

	</tr>
	<% end %>
</table>




<h3>New book</h3>

	<%= form_for(@book, url: '/books') do |f| %>

		<h4>Title</h4>
		<%= f.text_field :title %>

		<h4>Body</h4>
		<%= f.text_area :body %><br>

		<%= f.submit 'Create book'%>


	<% end %>